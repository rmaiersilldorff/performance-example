{
  "name": "performance-app",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:mock": "ng serve --configuration=mock --port 8901 --open",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "start:node:server": "nodemon server/server.js",
    "prepare": "husky install",
    "generate:client": "openapi-generator-cli generate -i docs/api/api-docs.yaml -o src/app/features/reisen/api -g typescript-angular && prettier --config prettier.config.js -w src/app/features/reisen/api",
    "prettier:fix": "prettier --config prettier.config.js -w src"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~20.0.3",
    "@angular/cdk": "^20.0.3",
    "@angular/common": "~20.0.3",
    "@angular/compiler": "~20.0.3",
    "@angular/core": "~20.0.3",
    "@angular/forms": "~20.0.3",
    "@angular/material": "^20.0.3",
    "@angular/platform-browser": "~20.0.3",
    "@angular/platform-browser-dynamic": "~20.0.3",
    "@angular/router": "~20.0.3",
    "@faker-js/faker": "^9.8.0",
    "@ngrx/operators": "^19.2.0",
    "@ngrx/signals": "^19.2.0",
    "bootstrap-4-grid": "^3.4.0",
    "http-server": "^14.1.1",
    "nodemon": "^3.1.9",
    "ngx-scrollbar": "^18.0.0",
    "perfect-scrollbar": "1.5.5",
    "resize-observer-polyfill": "1.5.1",
    "rxjs": "~7.5.4",
    "tslib": "^2.0.0",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~20.0.2",
    "@angular/cli": "~20.0.2",
    "@angular/compiler-cli": "~20.0.3",
    "@angular/language-service": "~20.0.3",
    "@openapitools/openapi-generator-cli": "^2.20.0",
    "@types/faker": "^6.6.8",
    "@types/jasmine": "~5.1.7",
    "@types/jasminewd2": "~2.0.13",
    "@types/node": "^22.14.1",
    "codelyzer": "^6.0.2",
    "eslint": "^9.22.0",
    "husky": "9.1.7",
    "jasmine-core": "~5.6.0",
    "jasmine-spec-reporter": "~7.0.0",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "^5.1.0",
    "karma-jasmine-html-reporter": "^2.1.0",
    "prettier": "^3.5.3",
    "ts-node": "~8.3.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.28.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    },
    "lint-staged": {
      "*.{ts,js}": "eslint --fix",
      "*.{js,ts,html,scss,css,md}": "prettier --write"
    }
  }
}
